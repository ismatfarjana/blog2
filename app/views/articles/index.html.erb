 <div class="all_posts">
    <% @articles.each do |article| %>
     <div class="post_heading">
         <h2>
          <%= article.title %>
         </h2>
      </div>
      <div class="post_author">
        <%= article.author %>, created at <%= article.created_at %>
      </div>
      <div class="post">
        <%= article.body %>
      </div>
      <%= link_to 'Continue Reading..', article %>
   <% end %>
      <%#= link_to 'Edit', edit_article_path(article) %>

</div>
