

<section class="one_post_heading">
  <h1>
    <strong><%= @article.title %></strong>

  </h1>
</section>
<div class="one_post_author">
    <h2>
      <strong>Author:</strong>
      <%= @article.author %> <br>
      <p>created at <%= @article.created_at %></p>
    </h2>
</div>

  <hr>

<div class="post_body">
<p><%= @article.body %></p>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %><br>
<%#= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' } %>

<!--show comment-->
<section class="show_comment">
   <h2>Comments:</h2>
  <% @all_comments.each do |comment|  %>
    <p>
      <%= comment.body.capitalize %><br>
    <div class="comment_time">Comment was created at <%= comment.created_at %></div></p><br><br>
  <% end %>
</section>

</div>

<!-- comment form-->
<%= form_with(url: "/articles/#{@article.id}/comments", method:"post") do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<br>
  <div class="field">
    Post comment<% form.label :body %><br>
    <%= form.text_area :body %>
  </div>


  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

